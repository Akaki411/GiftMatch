FROM mcr.microsoft.com/dotnet/runtime:9.0 AS base
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src
COPY ["labdotnet/labdotnet.csproj", "labdotnet/"]
RUN dotnet restore "labdotnet/labdotnet.csproj"
COPY . .
WORKDIR "/src/labdotnet"
RUN dotnet build "labdotnet.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "labdotnet.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "labdotnet.dll"]
